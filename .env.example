# Docker image and port
TINY_GATEWAY_IMAGE=ghcr.io/paul-callahan/tiny-gateway:latest
TINY_GATEWAY_PORT=8000

# Host config path -> in-container config path (single file mount)
TINY_GATEWAY_CONFIG_FILE=./sample-configs/basic-single-tenant.yml
TINY_GATEWAY_CONFIG_PATH_IN_CONTAINER=/app/config/config.yml

# Runtime settings
SECRET_KEY=dev-secret-key-change-me
ACCESS_TOKEN_EXPIRE_MINUTES=30
LOG_LEVEL=INFO
